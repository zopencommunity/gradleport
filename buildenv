###
### Required user-supplied functions
###

zopen_check_results()
{
  dir="$1"
  pfx="$2"
  chk="$1/$2_check.log"

  # Echo the following information to gauge build health
  echo "actualFailures:0"
  echo "totalTests:1"
  echo "expectedFailures:0"
  echo "expectedTotalTests:1"
}

zopen_get_version()
{
  export JAVA_HOME=$(dirname $(dirname $(/bin/type java | awk ' { print $3; }')))
  gradleDashDashVersion=$(bin/gradle --version)  # Store as a variable for debug
  version=$(echo "${gradleDashDashVersion}" | awk '/Gradle/ { print $2}')
  if [ $(echo "${version}" | wc -l) -ne 1 ]; then
    printSoftError "Version string incorrectly parsed:"
    printError "Output: ${gradleDashDashVersion}"
  else
    echo "${version}"
  fi
}

